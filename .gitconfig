[user]
    name = Richard O'Dwyer
    email = richard@richard.do

[alias]
    st = status
    rpull = rebase --merge
    br = branch
    ch = checkout
    reb = rebase
    res = reset
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
        showtool = "!showci () { rev=${1:-HEAD}; git difftool --dir-diff $rev~1 $rev; }; showci $1"

[push]
    default = current

[remote "origin"]
    fetch = +refs/pull/*/head:refs/pull/origin/*

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[core]
    editor = nano
    excludesfile = ~/.gitignore

[merge]
    tool = meld

[diff]
    tool = meld

[difftool "meld"]
    path = "/Applications/Meld.app/Contents/MacOS/Meld-bin"

[mergetool "meld"]
    path = "/Applications/Meld.app/Contents/MacOS/Meld-bin"
    trustExitCode = true
    keepBackup = false
